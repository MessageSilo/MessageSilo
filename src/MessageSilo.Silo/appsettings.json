{
  "Serilog": {
    "Using": [
      "Serilog.Sinks.Console",
      "Serilog.Sinks.ApplicationInsights"
    ],
    "MinimumLevel": {
      "Default": "Information",
      "Override": {
        "Microsoft": "Information",
        "System": "Warning"
      }
    },
    "WriteTo": [
      {
        "Name": "Console"
      },
      {
        "Name": "ApplicationInsights",
        "Args": {
          "connectionString": "$(ConnectionStrings.AI)",
          "telemetryConverter": "Serilog.Sinks.ApplicationInsights.TelemetryConverters.TraceTelemetryConverter, Serilog.Sinks.ApplicationInsights"
        }
      }
    ],
    "Enrich": [ "FromLogContext" ],
    "Properties": {
      "Application": "Message Silo - Silo"
    }
  },
  "AllowedHosts": "*",
  "Silo": {
    "PrimaryAddress": "127.0.0.1",
    "StateUnlockerKey": "$(Silo.StateUnlockerKey)",
    "DatabaseConnectionString": "$(Silo.DatabaseConnectionString)",
    "DatabaseName": "$(Silo.DatabaseName)"
  },
  "AI": {
    "ApiKey": "$(AI.ApiKey)"
  }
}
