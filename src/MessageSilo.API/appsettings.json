{
  "Serilog": {
    "Using": [
      "Serilog.Sinks.Console",
      "Serilog.Sinks.ApplicationInsights"
    ],
    "MinimumLevel": {
      "Default": "Information",
      "Override": {
        "Microsoft": "Information",
        "System": "Warning"
      }
    },
    "WriteTo": [
      {
        "Name": "Console"
      },
      {
        "Name": "ApplicationInsights",
        "Args": {
          "connectionString": "$(ConnectionStrings.AI)",
          "telemetryConverter": "Serilog.Sinks.ApplicationInsights.TelemetryConverters.TraceTelemetryConverter, Serilog.Sinks.ApplicationInsights"
        }
      }
    ],
    "Enrich": [ "FromLogContext" ],
    "Properties": {
      "Application": "Message Silo - API"
    }
  },
  "AllowedHosts": "*",
  "Auth0": {
    "Domain": "https://message-silo.eu.auth0.com",
    "Audience": "https://api.message-silo.dev"
  },
  "ConnectionStrings": {
    "GrainStateStorage": "$(ConnectionStrings.GrainStateStorage)"
  },
  "Orleans": {
    "PrimarySiloAddress": "127.0.0.1"
  }
}
